{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go run",
      "type": "shell",
      "command": ["go clean &&", "go run ${workspaceFolder}\\main.go"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "go test",
      "type": "shell",
      "command": "go test -v ${fileDirname}",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
